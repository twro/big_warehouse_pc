/*文字省略*/

.ellip {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/*文字换行*/

.newLine {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 分割线 */

.space {
  width: 100%;
  height: 20rpx;
  background-color: #f8f8f8;
}

/* 订单二级标题 */

.title-bar {
  padding: 40rpx 0 40rpx 30rpx;
  font-size: 14px;
  letter-spacing: 2rpx;
  color: #222;
}

::-webkit-scrollbar {
  display: none;
}

page {
  font-family: 'Microsoft Yahei';
  font-size: 28rpx;
  color: #666;
}

/*自定义向下箭头*/

.btn-arrow {
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-arrow::after {
  display: block;
  content: "";
  width: 18rpx;
  height: 18rpx;
  border-top: 2rpx solid #999;
  border-right: 2rpx solid #999;
  transform: rotate(135deg);
  margin-left: 10rpx;
  margin-bottom: 8rpx;
}

/* 定位实现右边1px边框 */

.bdr {
  position: relative;
}

.bdr::after {

    /* 2.1.通过伪元素绘制一像素的右边框 */
    content: "";
    width: 1rpx;
    height: 100%;
    background-color: #ebebeb;
    /* 2.2.定位，不占位置 */
    position: absolute;
    right: 0;
    top: 0;
}

/* 左右居中对齐 */
.center{
   display: flex;
   justify-content: space-between;
   align-items: center;

}
