/* pages/search/search.wxss */

.wrapper {
  width: 100%;
  height: 100%;
}

.wrapper .input {
  width: 100%;
  height: 88rpx;
  background: #6a7efc;
  position: relative;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  justify-content: center;
  align-items: center;
  display: flex;
  -webkit-box-align: center;
}

.input .ipt {
  width: 100%;
  height: 70rpx;
  background: #fff;
  border-radius: 10rpx;
  padding-left: 80rpx;
  box-sizing: border-box;
}

.input .search {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: 70rpx;
  top: 30rpx;
}

.search-history {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.search-history .search-text {
  width: 100%;
  position: relative;
  line-height: 27px;
  margin-top: 40rpx;
  box-sizing: border-box;
}

.search-history .history-txt {
  font-size: 24rpx;
  color: #212121;
}

.search-history .history-clear {
  width: 22rpx;
  height: 27rpx;
  vertical-align: middle;
  position: absolute;
  right: 50rpx;
  top: 20rpx;
}

.search-history .history-list {
  width: 100%;
  overflow: hidden;
  font-size: 26rpx;
  margin-top: 40rpx;
}

.history-list .list-text {
  background: #f5f7fa;
  padding: 14rpx 24rpx;
  display: inline-block;
  margin-right:20rpx;
  margin-bottom: 20rpx; 
  border-radius: 2px;
}
