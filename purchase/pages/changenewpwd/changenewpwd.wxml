<view class='wrapper'>
  <form bindsubmit="formSubmitSetPwd">
    <view class='telphone sameCss'>
      <text class='txt lf60'>新密码：</text>
      <view class='sameIpt'>
        <input type='number' password="true" class='phone sameInput' name="pwd" placeholder='请输入新密码' bindinput='pwd'></input>
      </view>
    </view>
    <view class='verifycode sameCss'>
      <text class='txt lf30'>确认密码：</text>
      <view class='sameIpt'>
        <input class='code sameInput' bindinput='pwd1' password="true" name="pwd1" placeholder='请再次输入密码'></input>
      </view>
    </view>
    <view class='btn-area'>
      <button form-type="submit" type='primary' class='btnBlue {{pwd!==""&&pwd1!==""?"":"disabled"}}' hover-class="none">完成</button>
    </view>
  </form>
</view>