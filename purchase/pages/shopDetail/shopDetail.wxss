/* pages/shopDetail/shopDetail.wxss */

page {
  background: #f8f8f8;
}

image {
  width: 100%;
  height: 100%;
}

.wrapper {
  width: 100%;
  height: 100%;
}

.pic-box {
  width: 750rpx;
  height: 750rpx;
  overflow: hidden;
}

.pic-box {
  width: 750rpx;
  height: 750rpx;
  overflow: hidden;
}

.countrybox {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  margin: 40rpx 0 0 0;
}

.countrybox .country_and_text {
  flex: 1;
}

.country_and_text .country_pic {
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
  display: inline-block;
  vertical-align: text-bottom;
}

.country_and_text .country_text {
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
  display: inline-block;
}

.countrybox .brand_pic {
  width: 140rpx;
  height: 40rpx;
}

.title {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #222;
  letter-spacing: 2rpx;
}

.rules {
  margin: 40rpx 0 0 0;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.rules .rules_box {
  width: 100%;
  background-color: #fff;
  box-shadow: 0px 2rpx 19rpx 4rpx rgba(0, 0, 0, 0.03);
  border-radius: 5rpx;
  padding: 40rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #666;
}

.rules .rules_spec {
  margin-bottom: 40rpx;
}

.rules .text_spec {
  color: #999;
  margin-left: 16rpx;
}

.rules .text_price {
  color: #ff5656;
  margin-left: 16rpx;
}

.rules .ma40 {
  margin-bottom: 40rpx;
}

.pic_and_preview {
  width: 100%;
  margin-bottom: 40rpx;
}

.pic_and_preview .pic_and_text {
  display: block;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #222;
}

.pic_and_preview .pic_preview {
  width: 750rpx;
  height: 750rpx;
}

.mark {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  position: relative;
}

.mark .mark-inner {
  width: 100%;
  height: 300rpx;
  border-radius: 5rpx;
  box-shadow: 0px 2rpx 19rpx 4rpx rgba(0, 0, 0, 0.03);
}

.mark .mark-text {
  width: 100%;
  background-color: #fff;
  height: 300rpx;
  border-radius: 5px;
  padding: 40rpx;
  box-sizing: border-box;
}

.showmsg {
  margin: 0 30rpx 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0px 2rpx 19rpx 4rpx rgba(0, 0, 0, 0.03);
  border-radius: 5rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  color: #333;
  display: flex;
}

.showmsg .text {
  padding-left: 40rpx;
  flex: 1;
}

.showmsg .arrow-right {
  width: 80rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  align-content: center;
}

.showmsg .right_pic {
  width: 15rpx;
  height: 28rpx;
}

.detail-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  overflow: hidden;
  top: -100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2222222;
}

.detail-inner {
  width: 560rpx;
  margin: 230rpx auto;
  position: relative;
  transform: translate3d(0, -495px, 0);
  transition: transform 1s cubic-bezier(0, 0, 0.25, 1),
                -webkit-transform 1s cubic-bezier(0, 0, 0.25, 1);
}

.detail-inner .detailbox-list {
  background: #fff;
  box-sizing: border-box;
  padding: 59rpx 30rpx 29rpx 30rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
}

.detailbox-list .detail-name {
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ececec;
}

.detailbox-list .name {
  color: #010101;
  line-height: 46rpx;
}

.detailbox-list .realname {
  color: #666;
  line-height: 46rpx;
}

.detailbox-list .frname {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
}

.detailbox-list .frname:not(:last-child) {
  border-bottom: 1px solid #ececec;
}

.detailbox-list .frmsg {
  color: #010101;
}

.detailbox-list .frnameshow {
  color: #666;
}

.detail-inner .close {
  width: 68rpx;
  height: 68rpx;
  position: absolute;
  left: 230rpx;
  bottom: -157rpx;
}

.detail-mask.show {
  top: 0;
}

.detail-mask.show .detail-inner {
  transform: translate3d(0, 0, 0);
}
