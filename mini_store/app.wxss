}
page {
  background-color: #f8f8f8;
  font-family: 'Microsoft Yahei';
  font-size: 28rpx;
  color: #666;
}
/*自定义向下箭头*/
.btn-arrow{
    display: flex;
    justify-content:center;
    align-items:center;
}
.btn-arrow::after{
    display: block;
    content: "";
    width:18rpx;
    height:18rpx;
    border-top:2rpx solid #999;
    border-right:2rpx solid #999;
    transform: rotate(135deg);
     margin-left:10rpx;
     margin-bottom:8rpx;
}


/* 定位实现右边1px边框 */
.bdr{
    position: relative;
}
.bdr::after {
    /* 2.1.通过伪元素绘制一像素的右边框 */
    content: "";
    width: 1rpx;
    height: 100%;
    background-color: #ebebeb;
    /* 2.2.定位，不占位置 */
    position: absolute;
    right: 0;
    top: 0;
}