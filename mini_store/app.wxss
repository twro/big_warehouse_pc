/*文字省略*/
.ellip{
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

/*文字换行*/
.newLine{
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
