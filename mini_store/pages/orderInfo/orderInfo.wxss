.order-head{
 position: relative;
}
.order-head image{
  width:100%;
  height:240rpx;
}
.order-txt{
    flex-direction:column;
    display: flex;
    position: absolute;
    left:80rpx;
    top:80rpx;
    font-size: 28rpx;
    color: #ffffff;
   
}
.order-txt text{
    padding-bottom:14rpx;
}
.order-ads{
  
  font-size: 32rpx;
   padding:33rpx 30rpx;
}
.ads-txt text{
  font-weight: bold;
}
.order-ads text{
  padding-left:48rpx;
}

.adr-box{
  margin-top:25rpx;
  display: flex;
  justify-content: space-between;
}

.adr-box image{
  margin-top:10rpx;
  flex-shrink: 0;
   width:24rpx;
   height:30rpx;
}

.title-bar{
  padding:40rpx 0 40rpx 30rpx;
  font-size: 14px;
	letter-spacing: 2rpx;
	color: #222222;
}
.info-section{
  
}
.info-box{
  display: flex;
	background-color: #f8f8f8;
  padding:40rpx 24rpx;
}
.info-box image{
  width:186rpx;
  flex-shrink: 0;
  height:186rpx;

}
.section-txt{
    margin-left:18rpx;
    display: flex;
    flex-direction:column;
  	font-size : 12px;
}
.section-title{
    margin-bottom:20rpx;
}

.price-num{
    display: flex;
    justify-content: space-between;
    
}

.param-red{
	font-weight: bold;
	color: #f5174a;
}
.info-price{
  font-size: 15px;
  height:96rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right:24rpx;
}
.submit{
  color:#f5174a;
  width: 150rpx;
	height: 54rpx;
	background-color: #fff;
	border-radius: 6rpx;
	border: solid 1rpx #f5174a;
  line-height:54rpx;
  text-align:center; 
  margin-left:30rpx;
}
.sel-more{
  border-top:1rpx solid #ececec;
  padding:25rpx 0;
