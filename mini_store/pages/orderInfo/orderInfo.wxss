  color:#999;
  padding-right:10rpx;
}

.account-list{
  padding:0 24rpx 20rpx;
}
.account-item{
  font-size:14px;
  display: flex;
  justify-content: space-between;
  padding-bottom:20rpx;
}

.info-nunber{
  padding-bottom: 20rpx;
}
.info-item{
  padding-left:24rpx;
   justify-content: flex-start;
   display: flex;
  font-size: 14px;
  margin-bottom:13rpx;
}
.info-item button{
  font-size: 12px;
  width: 100rpx;
	height: 40rpx;
	border-radius: 5rpx;
  line-height: 40rpx;
  padding:0;
  margin-left:14rpx;
}

.remark{

}
.remark textarea{
  width:100%;
  height: 200rpx;
	background-color: #f8f8f8;
  padding:27rpx 0 0 20rpx;
  font-size:13px;
}

.remark-txt{
  padding:28rpx 23rpx;
  font-size:11px;
  letter-spacing: 1rpx;
  color:#999;
  border-bottom:#e4e4e4 1px solid;
}
.btn-list{
  justify-content: flex-end;
  display: flex;
  padding:22rpx 0;
}
.btn-list button{
  width: 150rpx;
	height: 54rpx;
	border-radius: 5rpx;
  font-size:13px;
  padding:0;
  margin:0;
  line-height: 54rpx;
  margin-right:24rpx;
  color: #4a4c4e;
}
.btn-list .btn-main{
  color:#fff;
