/* pages/addAddress/addAddress.wxss */

.wrapper {
  width: 100%;
  overflow: hidden;
}

.wrapper .inner {
  width: 100%;
  overflow: hidden;
}

.inner .addAddress {
  display: block;
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
  overflow: hidden;
  position: relative;
}

.inner .form-list {
  position: relative;
  box-sizing: border-box;
  display: flex;
  width: 100%;
  padding: 15rpx 40rpx;
  background-color: #fff;
}

.inner .form-list::after {
  content: "";
  display: inline-block;
  width: 100%;
  height: 1px;
  background-color: #e4e4e4;
  position: absolute;
  left: 0;
  bottom: 0;
  transform: scaleY(0.5);
}

.form-item-hd {
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.form-item-bd {
  flex: 1;
  height: 60rpx;
}

.addAddress .detail-bd {
  height: 120rpx;
}

.addAddress .detail-ipt {
  width: 520rpx;
  height: 120rpx;
  padding: 15rpx 0;
  box-sizing: border-box;
}

.addAddress .default {
  position: absolute;
  right: 40rpx;
  top: 50%;
  margin-right: -10rpx;
  margin-top: -16px;
  transform: scale(0.9);
  transform-origin: right center;
}

.save-btn {
  width: 90%;
  height: 80rpx;
  margin: 0 auto;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #f5174a;
  border-radius: 6rpx;
  color: #fff;
  position: absolute;
  left: 5%;
  bottom: 1%;
}
