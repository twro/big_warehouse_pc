/* pages/sureOrder/sureOrder.wxss */

.wrapper {
  width: 100%;
  overflow: hidden;
}

.wrapper .inner {
  width: 100%;
  overflow: hidden;
}

.inner .scroll-box {
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  overflow: hidden;
}

.inner .goods-list {
  padding-bottom: 30rpx;
}

.inner .title {
  width: 100%;
  font-size: 30rpx;
  padding: 40rpx 0;
  color: #222;
  line-height: 28rpx;
}

.inner .goodsPic {
  width: 26rpx;
  height: 28rpx;
  vertical-align: bottom;
}

.inner .goods-show {
  width: 100%;
  background-color: #fff;
  box-shadow: 0px -2px 22px 5px rgba(0, 0, 0, 0.03);
  border-radius: 15rpx;
  margin-top: 20rpx;
}

.inner .goods-pic {
  padding: 40rpx 24rpx;
  display: flex;
  position: relative;
}

.inner .goods-pic::after {
  content: "";
  width: 100%;
  height: 1px;
  background-color: #ececec;
  position: absolute;
  left: 0;
  bottom: 0;
  transform: scaleY(0.5);
}

.inner .pic {
  width: 186rpx;
  height: 186rpx;
  margin-right: 20rpx;
}

.inner .picHas {
  width: 100%;
  height: 100%;
}

.inner .has-text {
  flex: 1;
  font-size: 24rpx;
  position: relative;
}

.inner .has-title {
  color: #434343;
  min-height: 60rpx;
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}

.inner .same {
  width: 100%;
  margin-bottom: 5rpx;
  color: #999;
}

.inner .old-color {
  color: #ff6618;
}

.inner .price {
  font-size: 30rpx;
  color: #f5174a;
  margin-top: 10rpx;
}

.inner .price-color {
  font-size: 24rpx;
}

.inner .nums {
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 24rpx;
  color: #666;
}

.inner .show-more {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  color: #bfbfbf;
}

.inner .show-pic {
  width: 22rpx;
  height: 12rpx;
  margin-left: 10rpx;
  margin-bottom: 2rpx;
}

.inner .all-datas {
  padding: 35rpx 24rpx;
  background-color: #fff;
  box-shadow: 0px -2px 22px 5px rgba(0, 0, 0, 0.03);
  border-radius: 15rpx;
}

.inner .all-list {
  display: flex;
  width: 100%;
  font-size: 28rpx;
  color: #222;
}

.inner .middle {
  margin: 20rpx 0;
}

.inner .text {
  flex: 1;
  text-align: left;
}

.inner .list-price {
  flex: 1;
  text-align: right;
}

.inner .all-price {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 28rpx;
  display: flex;
  background-color: #fff;
}

.inner .all-price-count {
  flex: 1;
  text-indent: 30rpx;
  color: #222;
}

.inner .price-nums {
  color: #f5174a;
  font-size: 36rpx;
  margin-left: 20rpx;
}

.inner .go-pay {
  width: 240rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background-color: #f5174a;
  border-radius: 0;
  padding: 0;
}

.inner .select-box {
  padding: 38rpx 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.inner .same-line {
  width: 100%;
  display: flex;
  position: relative;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.inner .same-text {
  width: 140rpx;
}

.inner .same-wid {
  flex: 1;
  padding-right: 20rpx;
   overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.inner .id_select {
  margin-top: 10rpx;
}

.inner .same-arrow {
  width: 15rpx;
  height: 26rpx;
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -14rpx;
  z-index: 1231;
}
