/* pages/mYorder/mYorder.wxss */

.search {
  padding: 20rpx 24rpx;
  height: 70rpx;
  display: flex;
  position: relative;
  border-bottom: 1px solid #f8f8f8;
  background-color: #fff;
  opacity: 1;
  transition: all .5s ease;
}

.searchIpt {
  flex: 1;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  height: 100%;
  font-size: 28rpx;
  padding: 0 10rpx;
  padding-left: 63rpx;
  color: #666;
}

.searchIcon {
  content: "";
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  left: 42rpx;
  top: 42rpx;
}

.top-tab {
  width: 100%;
  height: 88rpx;
  box-sizing: border-box;
  padding: 0 10rpx;
  line-height: 88rpx;
  background-color: #fff;
  overflow: hidden;
}

.top-tab-inner {
  width: 100%;
  position: relative;
  display: flex;
  overflow: hidden;
}

.top-tab .tab-item {
  flex: 1;
  text-align: center;
  position: relative;
  transition: all 0.1s linear;
}

.tab-item.in {
  color: #f5174a;
}

.tab-line-active {
  /* width: 146rpx; */
  height: 4rpx;
  background-color: #f5174a;
  border-radius: 2rpx;
  position: absolute;
  left: 0rpx;
  bottom: 0;
  transition: transform 0.3s;
}

