.swiper {
  margin-top: 20rpx;
}

.scroll-box {
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.scroll-box .srcoll-inner {
  padding: 32rpx 0 20rpx 24rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 15rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.srcoll-inner .orders {
  width: 100%;
  font-size: 26rpx;
  color: #4a4c4e;
  padding-bottom: 30rpx;
}

.orders .order-status {
  float: right;
  padding-right: 20rpx;
  color: #f5174a;
}

.sroll-x {
  width: 100%;
  white-space: nowrap;
}

.scroll-box .otder-img {
  width: 180rpx;
  height: 180rpx;
  margin-right: 10rpx;
}

.all-datas {
  width: 100%;
  padding-top: 60rpx;
  overflow: hidden;
  font-size: 26rpx;
  color: #565656;
  text-align: right;
  padding-right: 28rpx;
  box-sizing: border-box;
  padding-bottom: 24rpx;
}

.all-datas .all-in {
  margin-right: 15rpx;
}

.all-datas .big-txt {
  font-size: 36rpx;
  color: #222;
}

.all-datas .money, .all-datas .zero {
  color: #222;
}

.to-pay {
  width: 100%;
  padding-right: 24rpx;
  box-sizing: border-box;
  text-align: right;
}

.to-pay .pay {
  display: inline-block;
  width: 150rpx;
  padding: 10rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #f5174a;
  border: solid 1px #f5174a;
  border-radius: 66rpx;
  /* position: absolute;
  right: 24rpx;
  bottom: 20rpx; */
}

.only-one {
  width: 100%;
  display: flex;
}

.one-pic {
  width: 180rpx;
  height: 180rpx;
  margin-right: 24rpx;
}

.one-pic .one-ing {
  width: 100%;
  height: 100%;
}

.only-text {
  flex: 1;
}

.one-title {
  width: 100%;
  font-size: 26rpx;
  min-height: 80rpx;
  line-height: 40rpx;
  color: #222;
  margin-bottom: 20rpx;
}

.one-spec {
  font-size: 24rpx;
  color: #999;
}

.search.fadeIn {
  height: 0;
  padding: 0;
  z-index: -1;
  opacity: 0;
  font-size: 0;
  transition: all .5s linear;
  /* animation: fade-in 1s; */
}

.search.fadeIn .searchIpt::placeholder{
  font-size: 0;
}
