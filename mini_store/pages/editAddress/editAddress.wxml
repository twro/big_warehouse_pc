<view class='wrapper'>
  <view class='inner'>
    <form class='addAddress' style='height:{{leftHeight}}px'>
      <view class='form-list'>
        <view class="form-item-hd">姓名：</view>
        <view class="form-item-bd">
          <input type="text" placeholder-class="input-placeholder" name="name" value="{{name}}" placeholder="请输入姓名" />
        </view>
      </view>
      <view class='form-list'>
        <view class="form-item-hd">联系电话：</view>
        <view class="form-item-bd">
          <input type="text" placeholder-class="input-placeholder" name="telphone" placeholder="请输入联系电话" />
        </view>
      </view>
      <view class='form-list'>
        <view class="form-item-hd">所在地区：</view>
        <view class="form-item-bd">
          <addr-select bind:select="selectArea" addrSelect="{{address}}">
            <input type="text" placeholder-class="input-placeholder" name="area" placeholder="请选择" value='{{address[0]&&address[0].name}}-{{address[1]&&address[1].name}}-{{address[2]&&address[2].name}}' disabled='true'/>
          </addr-select>
        </view>
      </view>
      <view class='form-list detail'>
        <view class="form-item-hd">详细地址：</view>
        <view class="form-item-bd detail-bd">
          <textarea class='detail-ipt' placeholder-class="input-placeholder" name="area" placeholder="如街道、楼牌号等"></textarea>
        </view>
      </view>
      <view class='form-list'>
        <view class="form-item-hd">设为默认：</view>
        <view class="form-item-bd">
          <switch type="switch" name="default" color="#3fe65b" class='default' />
        </view>
      </view>
      <button formType="submit" class="save-btn">保存并使用</button>
    </form>
  </view>
</view>