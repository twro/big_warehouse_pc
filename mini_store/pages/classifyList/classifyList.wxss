/* pages/classifyList/classifyList.wxss */
.wrapper{
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.wrapper .inner{
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.inner .search{
    padding: 20rpx 24rpx;
    height: 70rpx;
    display: flex;
    position: relative;
    border-bottom: 1px solid #f8f8f8;
}
.inner .searchIpt{
    flex: 1;
    background-color: #f8f8f8;
    border-radius: 10rpx;
    height: 100%;
    font-size: 28rpx;
    padding: 0 10rpx;
    padding-left: 63rpx;
    color: #666666;
}

.inner .searchIcon{
    content: "";
    width: 26rpx;
    height: 26rpx;
    position: absolute;
    left: 42rpx;
    top: 42rpx;
}
.inner .searchTtx{
    width:90rpx;
    line-height: 70rpx;
    text-align: right;
    font-size: 30rpx;
    color: #666666;
}
.inner .list-box{
    padding: 0 12rpx;
}
.list-box .list-types{
    width: 100%;
    display: flex;
}
.list-types .types{
    flex: 1;
    text-align: center;
    line-height: 88rpx;
    font-size: 28rpx;
    color: #222222;
}

.list-types .types.in{
    color: #f5174a
}

.list-box .list-wrapper{
    width: 100%;
    overflow: hidden;
    padding-bottom: 10rpx;
}
.list-ul .list-show{
    width: 100%;
    display: flex;
    margin-top: 24rpx;
}
.list-show .img{
    width: 248rpx;
    height: 248rpx;
    overflow: hidden;
    margin-right: 18rpx;
}

.list-box .imgSrc{
    width: 100%;
    height: 100%;
}
.list-box .textAndPic{
    flex: 1;
    border-bottom: 1px solid #e4e4e4
}
.list-box .country{
    width: 100%;
    height: 28rpx;
    line-height: 28rpx;
}

.list-box .countryPic{
    width: 26rpx;
    height: 26rpx;
    vertical-align:bottom;
}

.list-box .countryTit{
    font-size: 22rpx;
    margin-left: 10rpx;
    color: #999;
    line-height: 28rpx;
}
.list-box .headTid{
  margin-top: 14rpx;
  font-size: 28rpx;
  line-height: 35rpx;
  min-height: 70rpx;
  color: #010101;
}
.list-box .post{
  width: 110rpx;
  height: 26rpx;
  line-height: 26rpx;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  border-radius: 2px;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #b67efc;
}

.list-box .price{
  width: 100%;
  font-size: 32rpx;
  color: #f5174a;
  padding-bottom: 20rpx;
}
.list-box .iconMon{
  font-size: 22rpx;
}