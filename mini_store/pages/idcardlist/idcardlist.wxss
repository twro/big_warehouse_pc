/* pages/idcardlist/idcardlist.wxss */

.wrapper {
  width: 100%;
  overflow: hidden;
}

.wrapper .inner {
  width: 100%;
  overflow: hidden;
}

.inner .idcard-list:first-child {
  margin-top: 10rpx;
}

/* .inner .idcard-list:not(:first-child) {
  margin-top: 20rpx;
} */

.inner .idcard-list {
  padding: 0 20rpx 20rpx;
  border-radius: 15rpx;
}

.inner .idcard-list .list-inner {
  padding: 44rpx 168rpx 44rpx 74rpx;
  background-color: #fff;
  border-radius: 15rpx;
  position: relative;
}
.inner .top{
  font-size: 32rpx;
  color: #222;
  margin-bottom: 24rpx;
}
.inner .idcard{
  font-size: 28rpx;
  color: #424144;
}
.inner .close{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 60rpx;
  top: 50%;
  margin-top: -15rpx;
}.inner .addNew{
  padding: 10rpx 20rpx;
  overflow: hidden;
  background: #fff;
}
.addNew .add-newaddress{
  display: block;
  width: 100%;
  padding: 20rpx 0;
  color: #fff;
  text-align: center;
  background-color: #f5174a;
}