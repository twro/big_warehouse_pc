.person_bg {
  width: 100%;
  height: 100%;
}

.person-head {
  position: relative;
  height: 260rpx;
}

.person-box {
  width: 660rpx;
  display: flex;
  left: 30rpx;
  top: 60rpx;
  position: absolute;
  align-items: center;
}

.person-box image {
  flex-shrink: 0;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.person-box text {
  margin-left: 30rpx;
  color: #e7e6e6;
  font-size: 16px;
  display: block;
}

.option-box {
  display: flex;
  flex-wrap: wrap;
}

.option-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 180rpx;
  width: 33.33%;
  border-bottom: 1rpx solid #ebebeb;
}

.option-item image {
  width: 38rpx;
  height: 45rpx;
}

.option-item:nth-child(2) image {
  width: 50rpx;
  height: 46rpx;
}

.option-item:nth-child(3) image {
  width: 50rpx;
  height: 46rpx;
}

.option-item:nth-child(4) image {
  width: 48rpx;
  height: 42rpx;
}

.option-item:nth-child(5) image {
  width: 42rpx;
  height: 42rpx;
}

.option-item:nth-child(6) image {
  width: 42rpx;
  height: 42rpx;
}

.option-item .option-txt {
  color: #000;
  font-size: 12px;
  margin-top: 16rpx;
}

.msg-icon {
  position: relative;
}

.msg-icon::after {
  line-height: 38rpx;
  text-align: center;
  position: absolute;
  content: "3";
  width: 38rpx;
  height: 38rpx;
  border: solid 3rpx #f5174a;
  border-radius: 50%;
  right: -26rpx;
  top: -20rpx;
  color: #f5174a;
  background-color: #fff;
}
